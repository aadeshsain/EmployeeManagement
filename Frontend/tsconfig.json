// tsconfig.app.json
{
  "compilerOptions": {
    "types": ["node", "react", "react-dom"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react-jsx", // include this if you're using React 17+
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
